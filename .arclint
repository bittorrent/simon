{
  "linters": {
    "pep8": {
      "type": "pep8",
      "include": "(\\.py$)",
      "flags": [
        "--max-line-length=120"
      ],
      "severity": {
        "E501": "warning"
      }
    },
    "text": {
      "type": "text",
      "include": "(\\.py$)",
      "text.max-line-length": 120
    },
    "merge-conflict": {
      "type": "merge-conflict",
      "include": "(.*)"
    }
  }
}
